                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="25dp"
                android:text="Nombre:"
                android:textColor="#474242"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/TxtNombreDetalleP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

